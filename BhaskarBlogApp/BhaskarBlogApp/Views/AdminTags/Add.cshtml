@model BhaskarBlogApp.Models.ViewModels.AddTagRequest

<div class="bg-primary bg-opacity-75 py-4 text-white shadow-sm mb-4">
    <div class="container">
        <h1 class="display-6 fw-semibold">➕ Add New Tag</h1>
        <p class="lead mb-0">Use the form below to create a new blog tag.</p>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <form method="post" novalidate>
                        <div class="mb-3">
                            <label class="form-label fw-bold" for="Name">Tag Name</label>
                            <input type="text" class="form-control" id="Name" asp-for="Name" placeholder="e.g., technology" required />
                            <span class="text-danger small" asp-validation-for="Name"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold" for="displayName">Display Name</label>
                            <input type="text" class="form-control" id="displayName" asp-for="DisplayName" placeholder="e.g., Technology" required />
                            <span class="text-danger small" asp-validation-for="DisplayName"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">
                                ✅ Submit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
